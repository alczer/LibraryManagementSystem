<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Isbn</th>
      <th>Language</th>
      <th>State</th>
      <th>Date pub</th>
      <th>Item img file name</th>
      <th>Item img content type</th>
      <th>Item img file size</th>
      <th>Item img updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.isbn %></td>
        <td><%= item.language %></td>
        <td><%= item.state %></td>
        <td><%= item.date_pub %></td>
        <td><%= item.item_img_file_name %></td>
        <td><%= item.item_img_content_type %></td>
        <td><%= item.item_img_file_size %></td>
        <td><%= item.item_img_updated_at %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

