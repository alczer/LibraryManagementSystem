<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :isbn %>
    <%= f.input :language %>
    <%= f.input :state %>
    <%= f.input :date_pub %>
    <%= f.input :item_img_file_name %>
    <%= f.input :item_img_content_type %>
    <%= f.input :item_img_file_size %>
    <%= f.input :item_img_updated_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
