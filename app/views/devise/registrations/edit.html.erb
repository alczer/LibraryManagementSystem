<h2>Edytuj konto</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, :label => "Hasło", autocomplete: "off", hint: "pozostaw puste, jeśli nie chcesz zmieniać hasła", required: false %>
    <%= f.input :password_confirmation, :label => "Potwierdź hasło", required: false %>
    <%= f.input :current_password, :label => "Aktualne hasło", hint: "potrzebujemy obecnego hasła, aby potwierdzić zmiany", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Zatwierdź" %>
  </div>
<% end %>

<h3>Usuń konto</h3>

<p>Serio? <%= link_to "Usuń konto", registration_path(resource_name), data: { confirm: "Na pewno?" }, method: :delete %></p>

<%= link_to "Powrót", :back %>
