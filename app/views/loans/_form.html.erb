<%= simple_form_for(@loan) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :item %>
    <%= f.association :user %>
    <%= f.input :date_in %>
    <%= f.input :date_out %>
    <%= f.association :librarian %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
