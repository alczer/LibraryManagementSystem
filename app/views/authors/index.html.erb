<p id="notice"><%= notice %></p>

<h1>Autorzy</h1>

<table border = "2">
  <thead>
    <tr>
      <th style="padding: 3px">Nazwa</th>
      <th style="padding: 3px">Data urodzenia</th>
      <th style="padding: 3px" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td style="padding: 3px"><%= author.name %></td>
        <td style="padding: 3px"><%= author.date_born %></td>
        <td style="padding: 3px"><%= link_to 'Pokaż', author %></td>
        <td style="padding: 3px"><%= link_to 'Edytuj', edit_author_path(author) %></td>
        <td style="padding: 3px"><%= link_to 'Usuń', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nowy autor', new_author_path %>
