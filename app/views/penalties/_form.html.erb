<%= simple_form_for(@penalty) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date %>
    <%= f.input :value %>
    <%= f.association :client %>
    <%= f.association :loan %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
