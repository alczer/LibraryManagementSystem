<p id="notice"><%= notice %></p>

<h1>Penalties</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Value</th>
      <th>Client</th>
      <th>Loan</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @penalties.each do |penalty| %>
      <tr>
        <td><%= penalty.date %></td>
        <td><%= penalty.value %></td>
        <td><%= penalty.client %></td>
        <td><%= penalty.loan %></td>
        <td><%= link_to 'Show', penalty %></td>
        <td><%= link_to 'Edit', edit_penalty_path(penalty) %></td>
        <td><%= link_to 'Destroy', penalty, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

